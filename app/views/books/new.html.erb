<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to "show", book_path(book.id), class: "show_1" %>
<%= link_to "edit", edit_book_path(book.id), class: "edit_1"  %>
<%= link_to "destroy", book_path(book.id), class: "destroy_1", method: :delete,"data-confirm" => "Are you sure?" %>
</tr>
<% end %>
</tbody>
</table>

<br>

<h3>New book</h3>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title, class: "book_title" %>

<h4>Body</h4>
<%= f.text_area :body, class: "book_body" %>

<br><%= f.submit 'Create Book' %></br>

<% end %>