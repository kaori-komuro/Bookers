<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
	<%= f.text_field :title, class: "book_title" %>
    <h4>Body</h4>
    <%= f.text_area :body, class: "book_body" %>
    <br>
    <%= f.submit 'update book' %>
<% end %>
<br>
<%= link_to "show", book_path(@book.id), class: "show_2" %> |
<a href="/books/new", class:"back" >Back</a>